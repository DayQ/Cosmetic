<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.daysi.bellezacerca.MainActivity"
    android:weightSum="1"
    android:background="@drawable/fondo1">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="           COSMETIC"
        android:id="@+id/textView26"
        android:layout_weight="0.20"
        android:autoText="false"
        android:textColor="@android:color/primary_text_light"
        android:textSize="45sp"
        android:background="#c2185b"
        android:gravity="top|center_vertical|center|center_horizontal"
        android:padding="20dp"
        android:elevation="20dp"
        android:elegantTextHeight="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PROMOTOR(a)"
        android:onClick="promotor"
        android:id="@+id/button"
        android:layout_weight="0.10"
        android:background="@android:color/holo_orange_light"
        android:shadowColor="#cfb40a"
        android:layout_margin="10dp"
        android:textColor="#3d063f"
        android:textSize="25sp" />



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CLIENTE"
        android:onClick="cliente"
        android:id="@+id/button2"
        android:background="@android:color/holo_orange_light"
        android:layout_margin="10dp"
        android:layout_weight="0.09"
        android:textColor="#3d063f"
        android:textSize="25sp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_weight="0.16">

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OFERTAS"
        android:onClick="ofertas"
        android:id="@+id/button5"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_weight="0.04"
        android:background="@android:color/holo_orange_light"
        android:textColor="#3d063f"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Desarrollado por: Daysi Quispe"
        android:id="@+id/textView51"
        android:layout_weight="0.20"
        android:gravity="center_vertical|center_horizontal" />

</LinearLayout>
