<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/fondo4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:id="@+id/scrollView">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="ADQUIERE TU PRODUCTO"
                android:id="@+id/textView46"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="LOCION KIDS"
                android:id="@+id/textView47"
                android:layout_gravity="center_horizontal" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:onClick="LocionK"
                android:src="@drawable/locionbebes"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="ROPA KIDS"
                android:id="@+id/textView48"
                android:layout_gravity="center_horizontal" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:onClick="RopaK"
                android:src="@drawable/nropa"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="BABY"
                android:id="@+id/textView49"
                android:layout_gravity="center_horizontal" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:onClick="baby"
                android:src="@drawable/nbebes"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="ACCESORIOS KIDS"
                android:id="@+id/textView55"
                android:layout_gravity="center_horizontal" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:onClick="acck"
                android:src="@drawable/naccesorios"/>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView50"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
